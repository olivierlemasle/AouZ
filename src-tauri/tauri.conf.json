{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "a-ou-z",
  "version": "0.1.0",
  "identifier": "io.github.olivierlemasle.AouZ",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "AouZ",
        "width": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "licenseFile": "../LICENSE.md",
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    }
  }
}
